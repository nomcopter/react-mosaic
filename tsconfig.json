{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib",
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "exclude": [
    "docs",
    "lib",
    "node_modules",
    "webpack.config*.js"
  ]
}
