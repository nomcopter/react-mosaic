{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "lib",
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "exclude": [
        "docs",
        "lib",
        "node_modules",
        "webpack.config*.js"
    ]
}
